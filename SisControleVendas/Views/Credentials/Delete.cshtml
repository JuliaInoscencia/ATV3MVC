@model SisControleVendas.Models.Credential

@{
    ViewData["Title"] = "Excluir";
}

<div class="container">
    <div class="row mt-4">
        <div class="col">
            <h1 class="text-orange d-inline">Excluir</h1>
            <a asp-action="Index" class="btn btn-orange float-end">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
                </svg> Voltar
            </a>
        </div>
    </div>
</div>

<hr class="orange-line" />
<h3 class="text-orange">Tem certeza que deseja excluir este registro?</h3>

<div class="card mb-3 border-orange">
    <div class="card-body">
        <h5 class="card-title text-orange">Detalhes da Credencial</h5>
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CredentialID" />
    <button type="submit" class="btn btn-danger btn-orange">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
        </svg>
        <span style="vertical-align: middle;">Excluir</span>
    </button>
</form>


<style>
    .form-control:focus {
        border-color: orange;
        box-shadow: 0 0 0 0.2rem rgba(255, 165, 0, 0.25);
    }

    hr.orange-line {
        border-top: 2px solid orange !important;
    }

    .text-orange {
        color: orange !important;
    }

    .btn-orange {
        color: orange;
        border-color: orange;
        background-color: transparent;
        margin-right: 5px;
    }

        .btn-orange:hover {
            background-color: orange;
            color: white;
        }

    .btn-danger.btn-orange {
        color: orange;
        background-color: white;
        border-color: orange;
    }

        .btn-danger.btn-orange:hover {
            background-color: orange;
            border-color: orange;
            color: white;
        }

    .border-orange {
        border-color: orange !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
