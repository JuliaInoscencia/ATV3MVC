@model SisControleVendas.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row mt-4">
        <div class="col">
            <h1 class="text-orange d-inline">Novo Produto</h1>
            <a asp-action="Index" class="btn btn-orange float-end">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
                </svg> Voltar
            </a>
        </div>
    </div>
</div>

<hr class="orange-line" />

<div class="row mb-4">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="LaunchDate" class="control-label"></label>
                        <input asp-for="LaunchDate" class="form-control" type="date" />
                        <span asp-validation-for="LaunchDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="EmployeedID" class="control-label"></label>
                        <input asp-for="EmployeedID" class="form-control" />
                        <span asp-validation-for="EmployeedID" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Criar" class="btn btn-primary btn-orange" />
            </div>
        </form>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: orange;
        box-shadow: 0 0 0 0.2rem rgba(255, 165, 0, 0.25);
    }

    hr.orange-line {
        border-top: 2px solid orange !important;
    }

    .text-orange {
        color: orange !important;
    }

    .btn-orange {
        color: orange;
        border-color: orange;
        background-color: transparent;
    }

        .btn-orange:hover {
            background-color: orange;
            color: white;
        }

    .btn-primary.btn-orange:focus,
    .btn-primary.btn-orange.focus {
        border-color: orange;
        box-shadow: 0 0 0 0.2rem rgba(255, 165, 0, 0.25);
    }

    .btn-primary.btn-orange:hover {
        background-color: orange;
        border-color: orange;
    }

        .btn-primary.btn-orange:hover svg path {
            fill: white;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
